<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.longIt.ecshop.mapper.OrderItemMapper">
     
     <!-- 根据订单id获取订单明细信息 -->
     <select id="getItemsByOrderId" resultMap="ItemMapper">
        select * from ec_order_item where order_id = #{orderId}
     </select>
     
     <resultMap type="OrderItem" id="ItemMapper">
        <result column="order_num" property="orderNum"/>
        <association property="article" column="article_id" select="org.longIt.ecshop.mapper.ArticleMapper.getArticleById"></association>
     </resultMap>
     
</mapper>